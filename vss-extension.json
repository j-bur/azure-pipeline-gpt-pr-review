{
    "manifestVersion": 1,
    "id": "AOIPullRequestReview",
    "name": "AOI Pull Request Reviewer",
    "version": "0.0.3",
    "publisher": "jamesburns-dev",
    "public": false,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Interaces with an Azure OpenAI deployment to review pull requests.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"        
    },
    "tags": [
        "OpenAI",
        "GPT",
        "pullRequest",
        "review"
    ],
    "files": [
        {
            "path": "AOIPullRequestReview"
        }
    ],
    "repository" : {
        "type" : "git",
        "uri" : "https://github.com/j-bur/azure-pipeline-gpt-pr-review"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "contributions": [
        {
            "id": "AOIPullRequestReview",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "AOIPullRequestReview"
            }
        }
    ]
}